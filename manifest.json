{
    "manifest_version": 3,
    "name": "Final Whistle Assistant",
    "version": "3.1.0",
    "description": "Displays additional information when browsing FinalWhistle website.",
    "icons": {
        "48": "icons/fw-logo-48.png",
        "96": "icons/fw-logo-96.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.finalwhistle.org/*"
            ],
            "js": ["dist/content-scripts.bundle.js"],
            "css": [
                "content-scripts/styles.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "dist/background-scripts.bundle.js"
        ],
        "service_worker": "dist/background-scripts.bundle.js",
        "type": "module"
    },
    "host_permissions": [
        "*://*.finalwhistle.org/*"
    ],
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "scripting",
        "storage",
        "tabs"
    ],
    "options_ui": {
        "page": "options/options.html"
    }
}