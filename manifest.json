{
    "manifest_version": 3,
    "name": "Final Whistle Assistant",
    "version": "3.0.0",
    "description": "Displays additional information when browsing FinalWhistle website.",
    "icons": {
        "48": "icons/fw-logo-48.png",
        "96": "icons/fw-logo-96.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.finalwhistle.org/*"
            ],
            "js": [
                "content-scripts/constants.js",
                "content-scripts/academy_buttons.js",
                "content-scripts/calendar.js",
                "content-scripts/lineup.js",
                "content-scripts/match.js",
                "content-scripts/player.js",
                "content-scripts/players.js",
                "content-scripts/row_highlight.js",
                "content-scripts/tags.js"
            ],
            "css": [
                "content-scripts/styles.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "assistant.js"
        ],
        "service_worker": "assistant.js",
        "type": "module"
    },
    "host_permissions": [
        "*://*.finalwhistle.org/*"
    ],
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "scripting",
        "storage",
        "tabs"
    ],
    "options_ui": {
        "page": "options/options.html"
    }
}