{
    "manifest_version": 3,
    "name": "Final Whistle Assistant",
    "version": "5.1.0",
    "description": "Displays additional information when browsing FinalWhistle website.",
    "icons": {
        "48": "icons/fwa-logo-48.png",
        "96": "icons/fwa-logo-96.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.finalwhistle.org/*"
            ],
            "js": [
                "content-scripts.bundle.js"
            ],
            "css": [
                "styles.css"
            ]
        },
        {
            "matches": [
                "*://*.abelfw.org/badgerpaste*"
            ],
            "js": [
                "training_simulation_badger.js"
            ]
        },
        {
            "matches": [
                "*://*.abelfw.org/trevor_ng*"
            ],
            "js": [
                "external_analyzer_trevor.js"
            ]
        }
    ],
    "background": __BACKGROUND_CONTENT__,
    "host_permissions": [
        "*://*.finalwhistle.org/*",
        "*://*.abelfw.org/badgerpaste*",
        "*://*.abelfw.org/trevor_ng*"
    ],
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "storage",
        "webNavigation"
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    }
}